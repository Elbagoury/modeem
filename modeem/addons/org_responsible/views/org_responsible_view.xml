<?xml version="1.0" encoding="utf-8" ?>
<modeem>
    <record id="org_responsible_view" model="ir.ui.view">
        <field name="name">org.responsible.view</field>
        <field name="model">org.responsible</field>
        <field name="arch" type="xml">
            <form string="My Form">
                <sheet>
                    <!--                    Sheet Header-->
                    <header>
                        <button name="escalate" type="object" string="Escalate" class="oe_highlight"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="reject" type="object" string="Reject" class="btn-danger"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button name="set_to_draft" type="object" string="Set To Draft"
                                attrs="{'invisible':[('state','=','draft')]}"/>
                        <field name="state" widget="statusbar" states="draft,escalation,rejected,done"/>
                    </header>
                    <br/>
                    <br/>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <!--                    Left Side Fields-->
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="description" attrs="{'readonly':[('state','!=','draft')]}"/>

                            <field name="customer_name" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="customer_phone" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="attachment" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <!--                        Right Side Fields-->
                        <group>
                            <field name="priority" widget="priority" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="organization" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="organization_system_type" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="responsible_org" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                </sheet>
                <!--            # Chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!--    tree view -->
    <record id="org_responsible_tree" model="ir.ui.view">
        <field name="name">org.responsible.tree</field>
        <field name="model">org.responsible</field>
        <field name="arch" type="xml">
            <tree string="Org Responsible Tree">
                <field name="name"/>
                <field name="customer_name"/>
            </tree>
        </field>
    </record>
    <!--       Action Window       -->
    <record id="org_responsible_action" model="ir.actions.act_window">
        <field name="name">Org Action View</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">org.responsible</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--     menu-->
    <menuitem id="org_responsible_menu" name="Org Responsible" action="org_responsible_action" sequence="10"/>
</modeem>